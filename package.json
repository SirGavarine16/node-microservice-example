{
  "name": "microservice-example",
  "version": "1.0.0",
  "description": "Simple boilerplate project which bootstraps a microservice app using Express.js with TypeScript with GraphQL support, Unit Testing using Jest and communication through a RabbitMQ server.",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsc && node dist/index",
    "dev": "tsc && nodemon dist/index",
    "watch": "tsc --watch",
    "build": "tsc",
    "tests": "jest",
    "tests:dev": "jest --watchAll"
  },
  "keywords": [
    "Microservice",
    "TypeScript",
    "Node.js",
    "Express.js",
    "GraphQL"
  ],
  "author": "Daniel De la Cruz <danieldelagavarain.dev@gmail.com> (https://github.com/SirGavarine16)",
  "license": "ISC",
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.2",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@graphql-tools/load-files": "^7.0.0",
    "amqplib": "^0.10.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0"
  }
}
